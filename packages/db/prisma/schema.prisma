generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  email String @unique   
  name  String?
  image String?
  password String?
  collection Collection[]
}

model Collection {
  id          String @id @default(uuid())
  title       String
  description String?
  authorId    String
  createdAt   DateTime @default(now())
  user      User     @relation(fields: [authorId], references: [id])
}